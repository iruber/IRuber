<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadastroIngredienteFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurante.gui.fragments.CadastroIngredienteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/novoIngredienteNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nome"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorBlack" />

        <Button
            android:id="@+id/novoIngredienteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:text="Novo Ingrediente"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</FrameLayout>